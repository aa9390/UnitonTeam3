<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_white">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="0dp"
            android:layout_height="344dp"
            android:background="@color/bright_blue"/>

        <View
            android:layout_width="257dp"
            android:layout_height="1dp"
            android:background="@color/white0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="30dp"
            />
        
        <TextView
            android:id="@+id/myInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내 정보"
            android:textColor="@color/white0"
            android:foreground="?android:attr/selectableItemBackground"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="12sp"
            android:paddingRight="20dp"
            android:paddingTop="8dp"
            android:paddingLeft="20dp"
            android:paddingBottom="13dp"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:textColor="@color/white0"
            android:text="사단법인 멋쟁이 사자처럼 \n45일째 근무 중"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="29dp"
            android:layout_marginLeft="31dp"/>

        <ImageView
            android:id="@+id/image0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/page_1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="118dp"
            />

        <TextView
            android:id="@+id/image_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/bright_blue"
            app:layout_constraintTop_toTopOf="@+id/image0"
            app:layout_constraintLeft_toLeftOf="@+id/image0"
            app:layout_constraintRight_toRightOf="@+id/image0"
            android:layout_marginTop="30dp"
            android:textStyle="bold"    
            android:text="1/5완성"/>
        
        <Button
            android:id="@+id/write_button"
            android:layout_width="160dp"
            android:layout_height="40dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image0"
            android:layout_marginTop="12dp"
            android:text="사직서 작성하기"
            android:textSize="16sp"
            android:textColor="@color/bright_blue"
            android:foreground="?android:attr/selectableItemBackground"
            android:background="@drawable/button_background"
            />

        <LinearLayout
            android:id="@+id/list_layout"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/white0"
            android:elevation="2dp"
            app:layout_constraintTop_toBottomOf="@+id/write_button"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp">

            <TextView
                android:id="@+id/tv_my_resignation"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:text="내가 품은 사직서: 8개"
                android:gravity="center_vertical"
                android:paddingLeft="17dp"
                android:textSize="14sp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/pinkish_grey"
                />
        </LinearLayout>


    </android.support.constraint.ConstraintLayout>

</ScrollView>